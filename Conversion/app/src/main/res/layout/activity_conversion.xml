<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mini.conversion.Conversion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONVERSION DE MONEDA"
        android:id="@+id/T1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce el Valor"
        android:id="@+id/T2"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/T1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VALOR"
        android:layout_above="@+id/DAP"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PESOS A DÒLARES"
        android:id="@+id/PAD"
        android:layout_alignTop="@+id/DAP"
        android:layout_toLeftOf="@+id/VALOR"
        android:layout_toStartOf="@+id/VALOR" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/SALIR"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÒLARES A PESOS"
        android:id="@+id/DAP"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/SALIR"
        android:layout_toRightOf="@+id/VALOR"
        android:layout_toEndOf="@+id/VALOR" />
</RelativeLayout>
